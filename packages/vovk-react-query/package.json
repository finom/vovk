{
  "name": "vovk-react-query",
  "version": "0.0.1-draft.95",
  "description": "useQuery and useMutation hooks for Vovk.ts",
  "scripts": {
    "build": "rm -f *.tsbuildinfo && npm run build:cjs && npm run build:esm",
    "build:esm": "tsc --module NodeNext --outDir mjs --moduleResolution nodenext",
    "build:cjs": "tsc --module commonjs --outDir cjs",
    "tsc": "npm run generate-client && tsc --noEmit",
    "npm-publish": "npm publish",
    "ncu": "npm-check-updates -u",
    "generate-client": "npm run generate --prefix ../../test -- --config=../packages/vovk-react-query/vovk.config.test.mjs",
    "pre-test": "npm run build && npm run build --prefix ../../test && npm run generate-client",
    "test-only": "npm run pre-test && node --experimental-strip-types --test --test-only test/test/**/*.mts",
    "unit": "npm run pre-test && node --experimental-strip-types --test --test-concurrency=1 test/*.mts",
    "test": "npm run pre-test && concurrently 'sleep 5 && npm run unit' 'npm run start --prefix ../../test' --kill-others --success first"
  },
  "main": "./cjs/index.js",
  "module": "./mjs/index.js",
  "types": "./mjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./mjs/index.js",
      "require": "./cjs/index.js",
      "types": "./mjs/index.d.ts"
    }
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finom/vovk.git"
  },
  "keywords": [
    "react-query"
  ],
  "author": "Andrey Gubanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/finom/vovk/issues"
  },
  "homepage": "https://github.com/finom/vovk#readme",
  "peerDependencies": {
    "@tanstack/react-query": "^5.66.0",
    "react": "^19.0.0",
    "vovk": "^3.0.0-draft.323"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.8",
    "jsdom": "^26.1.0",
    "react": "^19.1.0"
  }
}
