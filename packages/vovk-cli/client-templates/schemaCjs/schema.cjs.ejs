<%- `// auto-generated by Vovk.ts ${new Date().toISOString()}` %>
<% if(t.isVovkProject) { %>
const meta = require('./<%= t.schemaOutDir %>/_meta.json');
<% } %>
const segments = {<% Object.values(t.schema.segments).filter((segment) => segment.emitSchema).forEach((segment) => { if(segment.segmentName !== t.EXTENSIONS_SEGMENT_NAME) { %>
    '<%= segment.segmentName %>': require('./<%= t.schemaOutDir %>/<%= segment.segmentName || t.ROOT_SEGMENT_FILE_NAME %>.json'),
    <% } else { %>
    '<%= segment.segmentName %>': require('./<%= t.EXTENSIONS_SEGMENT_NAME %>.json'),
  <% }}) %>
};
const schema = {
  $schema: '<%- t.VovkSchemaIdEnum.SCHEMA %>',
  segments,
  meta: {
    apiRoot: '<%= t.apiRoot %>', // for debugging purposes
    <% if(t.isVovkProject) { %>
    ...meta
    <% } %>
  }
};

module.exports.schema = schema;
