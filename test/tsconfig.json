{
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "packages/**/*.ts",
    "vovk.config.cjs",
    "next.config.mjs",
    "postcss.config.cjs"
  ],
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "vovk/*": ["../packages/vovk/*"],
      "vovk-cli/*": ["../packages/vovk-cli/*"],
      "vovk-validate-client-ajv/*": ["../packages/vovk-ajv/*"],
      "vovk-python-client/*": ["../packages/vovk-python-client/*"],
      "next/*": ["./node_modules/next/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
