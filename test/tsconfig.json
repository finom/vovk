{
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "webpack.config.mjs",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "other-compiled-test-sources/**/*.ts",
    "packages/**/*.ts",
    "vovk.config.cjs",
    "next.config.mjs",
    "postcss.config.cjs",
    ".next/dev/types/**/*.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    // "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false,
    "jsx": "react-jsx",
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
